<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            
            <div class="card">
                <% if(errorMessage.length>0){ %>
                    <div class="error-message">
                        <span><%= errorMessage %></span>
                    </div>
                <% } %>
              <div class="card_title">

                <h1>Create Account</h1>
                <span>Already have an account? <a href="/login">Log In</a></span>
              </div>
              <div class="form">
                <form action="/signup" method="post" novalidate> 
                    <input type="text" name="username" id="username" placeholder="UserName" value="<%= oldInput.username %>"/>
                    <input type="email" name="email" placeholder="Email" id="email" value="<%= oldInput.email%>"/>
                    <input type="password" name="password" placeholder="Password" id="password" value="<%= oldInput.password%>"/>
                    <input type="password" name="confirmPassword" placeholder="Confirm-Password" id="confirmPassword" value="<%= oldInput.confirmPassword%>"/>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Sign Up</button>
                </form>
              </div>
              <div class="card_terms">
                  <input type="checkbox" name="" id="terms"> <span>I have read and agree to the <a href="">Terms of Service</a></span>
              </div>
            </div>
          </div>
    </main>
<%- include('../includes/end.ejs') %>