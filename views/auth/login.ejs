<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <div class="card">
              <% if(errorMessage.length>0){ %>
                <div class="error-message">
                    <span><%= errorMessage %></span>
                </div>
            <% } %>
              <div class="card_title">
                <h1>Login</h1>
                <span>Don't have an account? <a href="/signup">Signup</a></span>
              </div>
              <div class="form">
                <form action="/login" method="post">
                    <input type="email" name="email" placeholder="Email" id="email" value="<%= oldInput.email %>"/>
                    <input type="password" name="password" placeholder="Password" id="password" value="<%= oldInput.password %>"/>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit">Login</button>
                </form>
              </div>
              <div class="reset_title">
                <p>Forget Password? <a href="/reset">Reset Password</a></p>
              </div>
            </div>
          </div>




