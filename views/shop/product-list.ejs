<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
            <%- include('../includes/navigation.ejs') %>

            <main>
                <section class="feature__products">
                    <h1 class="feature__products-heading">Our Products</h1>
                    <% if (prods.length > 0) { %>
                        <div class="grid">
                            <% for (let product of prods) { %>
                                <article class="card product-item">
                                    <div class="card__image">
                                        <img src="/<%= product.imageUrl %>"
                                            alt="<%= product.title %>">
                                    </div>
                                    <div class="card__container">
                                        <div class="card__container-left">
                                            <h1 class="product__title"><%= product.title %></h1>
                                            <h2 class="product__price">â‚¹<%= product.price %></h2>
                                        </div>
            
                                        <div class="card__container-right">
                                            <a href="/products/<%= product.id %>" class="btn">Details</a>
                                        </div>
                                    </div>
            
                                    <div class="devider"></div>
            
                                    <p class="product__description">Description:- <%= product.description %></p>
                                
                                    <div class="card__actions">
                                            <% if(isAuthenticated) { %>
                                        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            
                                        <% } %>
                                    </div>
                                    
                                </article>
                            <% } %>
                        </div>
                        <section class="pagination">
                            <% if(currentPage !=1 && previousPage != 1) { %>
                                <a href="/products/?page=1">Start</a>
                            <% } %>
                            <% if(hasPreviousPage) { %>
                                <a href="/products/?page=<%=previousPage%>"><%= previousPage %></a>
                            <% } %>
                            <a href="/products/?page=<%=currentPage%>" class="active"><%= currentPage %></a>
                            <% if(hasNextPage) { %>
                                <a href="/products/?page=<%=nextPage%>"><%= nextPage %></a>
                            <% } %>
                            <% if(lastPage !== currentPage && nextPage!==lastPage) { %>
                            <a href="/products/?page=<%=lastPage%>">End</a>
                            <% } %>
                        </section>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                    <% } %>
                </section>
            </main>

            <section class="footer">
                <div class="col1">
                    <span class="col1__heading">
                        O-Shop
                    </span>
                </div>
    
                <div class="col2">
                    <span class="footer_link"><a href="./contact">Contact</a></span>
                </div>
    
                <div class="col3">
                    <span class="footer_link"><a href="./aboutus">About Us</a></span>
                </div>
            </section>

            <%- include('../includes/end.ejs') %>